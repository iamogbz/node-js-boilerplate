{
    "name": "boilerplate",
    "version": "0.0.1",
    "description": "NodeJS Boilerplate with precommit test and linting configured",
    "author": "iamogbz",
    "repository": {
        "type": "git",
        "url": "https://github.com/iamogbz/node-js-boilerplate"
    },
    "bugs": {
        "url": "https://github.com/iamogbz/node-js-boilerplate/issues"
    },
    "homepage": "https://github.com/iamogbz/node-js-boilerplate#readme",
    "license": "GPL-3.0",
    "keywords": [
        "node",
        "nodejs",
        "boilerplate",
        "testing",
        "linting",
        "ci",
        "package",
        "npm"
    ],
    "engines": {
        "node": ">=8",
        "npm": ">=6"
    },
    "main": "index.js",
    "scripts": {
        "lint": "eslint",
        "commitlint": "commitlint-travis",
        "build": "webpack --mode=production",
        "build-watch": "webpack --mode=development --watch",
        "test": "jest",
        "coveralls": "cat ./artifacts/coverage/lcov.info | coveralls",
        "commit": "git-cz",
        "release": "semantic-release"
    },
    "release": {
        "dryRun": true,
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/npm",
            "@semantic-release/github"
        ]
    },
    "jest": {
        "testPathIgnorePatterns": [
            "./artifacts/",
            "./node_modules/"
        ],
        "coverageDirectory": "./artifacts/coverage"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.js": [
            "npm run lint",
            "npm test -- --bail --findRelatedTests"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "devDependencies": {
        "@babel/cli": "^7.7.7",
        "@babel/core": "^7.7.5",
        "@babel/preset-env": "^7.7.7",
        "@commitlint/cli": "^8.2.0",
        "@commitlint/config-conventional": "^8.2.0",
        "@commitlint/travis-cli": "^8.2.0",
        "acorn": "^7.1.0",
        "babel-eslint": "^10.0.3",
        "babel-loader": "^8.0.6",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "commitizen": "^4.0.3",
        "coveralls": "^3.0.9",
        "cz-conventional-changelog": "^3.0.2",
        "eslint": "^6.7.2",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-import": "^2.19.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.17.0",
        "husky": "^3.1.0",
        "jest": "^24.9.0",
        "lint-staged": "^9.5.0",
        "prettier": "^1.19.1",
        "rxjs": "^6.5.3",
        "semantic-release": "^15.13.31",
        "stylelint": "^12.0.0",
        "stylelint-config-standard": "^19.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-processor-styled-components": "^1.9.0",
        "webpack": "^4.41.3",
        "webpack-cli": "^3.3.10"
    }
}
